<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.course.apispringbootmybatis.infrastructure.mapper.EmployeeMapper">

    <!-- 맵핑 정의-->
    <resultMap id="userMap" type="UserDto">
        <id property="userListNo" column="user_list_no"/>
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="userPw" column="user_pw" />
        <result property="userEmail" column="user_email"/>
        <result property="firstTimePwFlg" column="first_time_pw_flg"/>
        <result property="createDatetime" column="create_datetime" />
        <result property="createUser" column="create_user" />
        <result property="updateDatetime" column="update_datetime" />
        <result property="updateUser" column="update_user" />
    </resultMap>

    <!-- 컬럼 정의 -->
    <sql id="columns">
        o.user_list_no,
        o.user_id,
        o.user_name,
        o.user_pw,
        o.user_email,
        o.first_time_pw_flg,
        o.create_datetime,
        o.create_user,
        o.update_datetime,
        o.update_user
    </sql>

    <!-- 쿼리 정의 -->
    <select id="getAll" resultMap="userMap">
        SELECT * FROM mst_user
    </select>

    <!-- 쿼리 정의 -->
    <select id="selectById" resultMap="userMap">
        SELECT
            <include refid="columns"/>
        FROM
            mst_user
        WHERE
            user_id = #{employeeId}
    </select>

</mapper>